<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20sp"
        android:text="ScanMe"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/logOutButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_logout"
        android:padding="7dp"
        android:background="@drawable/iamgebtn_bg"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25sp"
        android:onClick="logout"/>



    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:padding="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/phone" />

    <ImageView
        android:id="@+id/imageiv"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="185sp"
        android:src="@drawable/scan_code"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/scanline"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/scan_line"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="180sp"
        android:text="Result"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/top_curved_card"
        android:layout_alignParentBottom="true">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan your QR"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15sp"
            android:layout_marginTop="5sp"
            android:text="Click or Insert your qr and scan"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/scanBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:src="@drawable/icon_scan"
            android:background="@drawable/circular_image_button"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25sp"/>

        <ImageButton
            android:id="@+id/camerabtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:layout_toLeftOf="@+id/scanBtn"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_camera" />


        <ImageButton
            android:id="@+id/galleryBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:layout_toRightOf="@+id/scanBtn"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_photo" />

    </RelativeLayout>


</RelativeLayout>